<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Carreras"
    android:background="@drawable/fondo">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/atrascarrera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes"
                android:src="@drawable/flechaatras"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="140dp"
                android:layout_marginStart="15dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/lol"
                android:src="@drawable/logoshalom"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/vistacarrera"
                android:src="@drawable/carreras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes"
                android:layout_marginTop="10dp"/>

            <ImageButton
                android:id="@+id/asphal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/bordes"
                android:scaleType="centerCrop"
                android:src="@drawable/asphal" />

            <ImageButton
                android:id="@+id/needforspeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes"
                android:scaleType="centerCrop"
                android:src="@drawable/needforspeed"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

            <ImageButton
                android:id="@+id/needforza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes"
                android:scaleType="centerCrop"
                android:src="@drawable/forzahori"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

            <ImageButton
                android:id="@+id/motogp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes"
                android:scaleType="centerCrop"
                android:src="@drawable/motogp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>