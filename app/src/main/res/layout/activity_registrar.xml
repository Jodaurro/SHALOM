<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrar"
    android:background="@drawable/fondo">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageButton
                android:id="@+id/atrasregistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="140dp"
                android:background="@drawable/bordes"
                android:src="@drawable/flechaatras"/>

            <ImageView
                android:id="@+id/lo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/logoshalom"
                android:layout_marginTop="40dp"/>
            <EditText
                android:id="@+id/nom"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bordes"
                android:digits="abcdefghijklmnñopqrstuvwxyz ABCDEFGHIJKLMNÑOPQRSTUVWXYZ"
                android:gravity="center"
                android:hint="NOMBRES"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="#757676"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="50dp"/>
            <EditText
                android:id="@+id/ape"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bordes"
                android:digits="abcdefghijklmnñopqrstuvwxyz ABCDEFGHIJKLMNÑOPQRSTUVWXYZ"
                android:gravity="center"
                android:hint="APELLIDOS"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="#757676"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/celu"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bordes"
                android:digits="0123456789"
                android:gravity="center"
                android:hint="CELULAR"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textColorHint="#757676"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/correo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bordes"
                android:gravity="center"
                android:hint="CORREO"
                android:textColor="@color/black"
                android:textColorHint="#757676"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bordes"
                android:gravity="center"
                android:hint="CONTRASEÑA"
                android:maxLength="15"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="#757676"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/comf"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bordes"
                android:gravity="center"
                android:hint="CONFIRMAR CONTRASEÑA"
                android:maxLength="15"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="#757676"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/regis"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#1364B7"
                android:text="REGISTRAR"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>